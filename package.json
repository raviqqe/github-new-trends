{
  "name": "github-trendy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tools/all.sh npm run build",
    "deploy": "firebase deploy",
    "deps": "npm install && tools/all.sh npm install",
    "format": "prettier --write fire*.json && tools/all.sh npm run format",
    "lint": "tools/all.sh npm run lint",
    "outdated": "npm outdated && tools/all.sh --no-error npm outdated",
    "test": "tools/all.sh npm run test",
    "update": "npm update && tools/all.sh npm update"
  },
  "dependencies": {},
  "devDependencies": {
    "codecov": "^3.1.0",
    "firebase-tools": "^5.0.1",
    "prettier": "^1.14.3"
  }
}
