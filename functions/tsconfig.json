{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es6", "es7", "esnext"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"]
}
